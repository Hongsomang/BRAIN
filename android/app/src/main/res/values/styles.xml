<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
        <item name="android:itemTextAppearance">@style/MenuText</item>
    </style>
    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
    </style>
    <style name="MenuText">
        <item name="android:textColor">#000</item>
    </style>
    <style name="ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:displayOptions">homeAsUp</item>
    </style>
</resources>
